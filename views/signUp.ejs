<%- include("partials/header.ejs") %> 
<body>
    <%- include("partials/nav.ejs") %>
    <div class="container-fluid vh-150">
        <div class="row h-100">
            <div class="col-md-6 d-flex flex-column justify-content-center align-items-center bg-light">
                <h1 class="text-center">Welcome!</h1>
                <p class="text-center">Enter your details to create your account.</p>
                <h3 id="fdbk" class="feedback">
                    <% if (typeof message != "undefined"){ %>
                        <%=message%>
                    <% } %>
                </h3>
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
                <form class="w-75" action="/signUp" method="POST">
                    <h2 class="mb-4 text-center">Sign Up</h2>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address*</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">New Password*</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                    </div>
                    <span id="passwordSuggestion" style="color: black;"></span>
                    <div class="mb-3">
                        <label for="password" class="form-label">Retype Password*</label>
                        <input type="password" class="form-control" id="retypePassword" name="retypePassword" placeholder="Retype your password" required>
                    </div>
                    <br><br>
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name*</label>
                        <input type="textarea" class="form-control" id="name" name="name" placeholder="Enter your full name" required>
                    </div>
                    <div class="mb-3">
                        <label for="zip" class="form-label">Zip Code*</label>
                        <input type="textarea" class="form-control" id="zip" name="zip" placeholder="Enter your zip code" required>
                    </div>
                    <span id="city"></span> <br><br>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter your phone number">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Sign Up!</button>
                </form> 
                <form class="w-75" action="/login">
                    <button type="submit" class="btn btn-primary w-100">Return to Login</button><br>
                </form>
                <p></p>
                <p>Required*</p>
                <br><br>
            </div>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>
    <script src="/js/script.js" defer></script>
</body>
</html>