<%- include("partials/header.ejs") %> 
    <body>
        <%- include("partials/nav.ejs") %>

        <h1> Book An Appointment </h1>
        <!-- <form id="signupForm" action="welcome.html"> (action is used to redirect after submisson. Currently do not have one.)--> 
        <form>
        <fieldset>
            <legend>Appointment Form</legend>
            First Name:<input type="text" name="fName"><br>
            Last Name: <input type="text" name="lName"><br>
            Email: <input type="text" name="email"><br>
            <label for="pNumber">Phone Number:</label>
            <input type="tel" id="pNumber" name="pNumber" placeholder="123-456-7890"><br>    
            Gender: <br>   
            Male<input type="radio" name="gender" value="m">
            Female<input type="radio" name="gender" value="f"><br>	
            Zip Code:  <input type="text" id="zip" name="zip"><br>
            City:   <span id="city"></span> <br>
            Latitude:  <span id="latitude"></span> <br>
            Longitude: <span id="longitude"></span> <br>
        
            State: 
            <select id="state" name="state">
                <option>Select One</option>
            </select> <br>
        
            Select a County: <select id="county"></select><br><br>
        
            <label for="anything-else">Anything Else?</label>
            <textarea id="anything-else" name="anything-else" rows="4" cols="50"></textarea><br>
        
            <input type="submit" value="Submit" id="button">
        </fieldset>
        </form>

        <script src="js/script.js"></script>

        <%- include("partials/footer.ejs") %>
    </body>
</html>